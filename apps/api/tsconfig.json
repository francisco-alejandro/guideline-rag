{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "~shared": [
        "src/shared"
      ],
      "~shared/*": [
        "src/shared/*"
      ],
      "~guideline": [
        "src/guideline"
      ],
      "~guideline/*": [
        "src/guideline/*"
      ],
      "~completion": [
        "src/completion"
      ],
      "~completion/*": [
        "src/completion/*"
      ]
    }
  }
}
